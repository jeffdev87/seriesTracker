<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/episode_details_scroll_view_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/episode_details_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/episode_details_main_image_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/episode_details_main_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/highlight_placeholder"/>

        <ImageView
            android:id="@+id/episode_details_main_image_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overlay"/>

        <TextView
            android:id="@+id/episode_details_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/episode_details_main_image"
            android:text="@string/episode_test_title"
            android:layout_marginLeft="@dimen/default_spacing_large"
            android:textColor="@color/default_background_first"
            android:textSize="@dimen/default_textSize_veryLarge"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/episode_details_time_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_spacing_large"
        android:layout_marginBottom="@dimen/default_spacing_small"
        android:layout_marginLeft="@dimen/default_spacing_medium"
        android:layout_marginRight="@dimen/default_spacing_medium">

        <LinearLayout
            android:id="@+id/episode_details_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/default_spacing_large"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/episode_details_time_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/episode_details_clock"/>

            <TextView
                android:id="@+id/episode_details_time_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/episode_time"
                android:layout_marginTop="@dimen/default_spacing_small"
                android:layout_marginLeft="@dimen/default_spacing_medium"
                android:textColor="@color/default_background_fourth"
                android:textSize="@dimen/default_textSize_large"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
        android:id="@+id/episode_details_summary_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_spacing_small"
        android:layout_marginBottom="@dimen/default_spacing_large"
        android:layout_marginLeft="@dimen/default_spacing_medium"
        android:layout_marginRight="@dimen/default_spacing_medium">

        <RelativeLayout
            android:id="@+id/episode_details_summary_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/default_spacing_large"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/episode_details_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_spacing_medium"
                android:text="@string/summary_title"
                android:textColor="@color/theme_colorAccent"
                android:textSize="@dimen/default_textSize_medium"/>
            <View
                android:id="@+id/episode_details_summary_line"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/default_spacing_medium"
                android:layout_below="@id/episode_details_summary_title"
                android:background="@color/default_background_third"/>

            <TextView
                android:id="@+id/episode_details_summary_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_spacing_medium"
                android:layout_marginBottom="@dimen/default_spacing_medium"
                android:text="@string/episode_text_default"
                android:layout_below="@id/episode_details_summary_line"
                android:textColor="@color/default_textColor_fourth"
                android:textSize="@dimen/default_textSize_small"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView><!-- From: file:/home/movile/Desktop/projandroid/SeriesTracker/app/src/main/res/layout/episode_details_activity.xml -->